-content_for :head do
  %title #{@puzzle.title} | A Brainteaser Puzzle | PlayWithYourMind
  %meta{:content => "#{@puzzle.title} | A Brainteaser Puzzle", :property => "og:title"}
  %meta{:content => "PlayWithYourMind | Brain Games & Mind Puzzles", :property => "og:site_name"}
  %meta{:content => image_url('brain-games.png'), :property => "og:image"}
  %meta{:content => @puzzle.description, :property => "og:description"}
  %meta{:content => "#{@puzzle.title} | A Brainteaser Puzzle", :property => "twitter:title"}
  %meta{:content => "PlayWithYourMind | Brain Games & Mind Puzzles", :property => "twitter:site"}
  %meta{:content => image_url('brain-games.png'), :property => "twitter:image"}
  %meta{:content => @puzzle.description, :property => "twitter:description"}
  %meta{:content => "summary", :property => "twitter:card"}
  %meta{:content => "#{@puzzle.title} | A Brainteaser Puzzle", :property => "title"}
  %meta{:property => "description", :content => @puzzle.description}

.row
  .large-12.columns
    %h4=link_to 'Puzzles & Brainteasers', '/puzzles-brainteasers'
    %h3 #{@puzzle.title} Puzzle Archives
    %p=@puzzle.description
    -for i in 1..@puzzle.count do
      .puzzle
        =image_tag('puzzles/'+@puzzle.slug.titleize.gsub('-', ' ')+'.jpg')
        %h4=link_to ('Puzzle #'+i.to_s), '/puzzles-brainteasers/'+@puzzle.slug+'/'+@puzzle.slug+'-'+i.to_s
        %p=@puzzle.description
