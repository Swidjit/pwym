.large-12.columns
  .remove x
  .link-scrape
    .link-title=page.title
    .link-url=page.url
  %input{:name => "post[websites_attributes][][url]", :type => "hidden", :value => page.url}
  %input{:name => "post[websites_attributes][][title]", :type => "hidden", :value => page.title}
  %input{:name => "post[websites_attributes][][description]", :type => "hidden", :value => page.description.gsub("'","")}
  %input{:name => "post[websites_attributes][][image_url]", :type => "hidden", :value => page.images.best}