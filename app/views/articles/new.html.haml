%h3 new article
=form_for @article, :url=>articles_path, :method => :post do |f|
  =f.text_field :title
  =f.text_area :body
  =f.select :category_id, options_from_collection_for_select(Category.all, 'id', 'title',3)
  =f.select :template, options_for_select(['main','with-video','left-image','right-image','image-break'])
  =f.file_field :image
  =f.submit
